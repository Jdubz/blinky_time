# Check if any blinky-console files are in the commits being pushed
if git diff --name-only @{push}.. 2>/dev/null | grep -q "^blinky-console/"; then
  echo "ğŸ” blinky-console changes detected, running checks..."

  cd blinky-console

  echo "ğŸ“ Running lint..."
  npm run lint || exit 1

  echo "ğŸ” Running type check..."
  npm run typecheck || exit 1

  echo "ğŸ”¨ Running build..."
  npm run build || exit 1

  echo "âœ… All blinky-console checks passed!"
fi
